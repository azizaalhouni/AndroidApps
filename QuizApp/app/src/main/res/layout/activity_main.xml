<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="357dp"
        android:layout_height="103dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/true1"
            android:layout_width="341dp"
            android:layout_height="wrap_content"

            android:text="True" />

        <RadioButton
            android:id="@+id/false1"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="RadioButton" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="349dp"
        android:layout_height="36dp"
        android:layout_marginTop="65dp"
        android:text="Kotlin is Null safety"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="43dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="322dp"
        android:layout_height="29dp"
        android:layout_marginTop="243dp"
        android:text="What Kotlin features?"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="33dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="293dp"
        android:layout_height="61dp"
        android:layout_marginTop="281dp"
        android:text="Functional"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="59dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="299dp"
        android:layout_height="61dp"
        android:layout_marginTop="350dp"
        android:text="Statically"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="56dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="309dp"
        android:layout_height="61dp"
        android:layout_marginTop="418dp"
        android:text="Highly Interoperable"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="51dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="329dp"
        android:layout_height="61dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="520dp"
        android:onClick="submit"
        android:text="Submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="361dp"
        android:layout_height="61dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="602dp"
        android:text="Reset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>